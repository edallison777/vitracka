{
    "name": "vitracka-weight-management",
    "version": "1.0.0",
    "description": "AI-enabled weight management system with safety-first approach",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "build": "tsc",
        "dev": "ts-node src/index.ts",
        "migrate": "ts-node src/database/migrate.ts migrate",
        "seed": "ts-node src/database/migrate.ts seed",
        "reset-db": "ts-node src/database/migrate.ts reset"
    },
    "dependencies": {
        "axios": "^1.6.5",
        "bcrypt": "^5.1.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.11.3",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.28.5",
        "@types/bcrypt": "^5.0.1",
        "@types/express": "^4.17.25",
        "@types/jest": "^29.5.5",
        "@types/jsonwebtoken": "^9.0.4",
        "@types/node": "^20.8.0",
        "@types/pg": "^8.10.7",
        "@types/uuid": "^9.0.6",
        "fast-check": "^3.13.2",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.ts",
            "**/*.test.ts"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/src/__tests__/setup/testSetup.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts"
        ]
    }
}